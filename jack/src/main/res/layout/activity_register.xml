<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_width_and_height_match"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/style_width_match_height_wrap"
        android:layout_weight="4.0">

        <Button
            android:id="@+id/but_register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="30.0dip"
            android:background="@mipmap/register_fanhui" />
    </RelativeLayout>

    <LinearLayout
        style="@style/style_width_match_height_wrap"
        android:layout_weight="2.0"
        android:orientation="vertical">

        <EditText
            android:id="@+id/re_username"
            style="@style/style_width_match_height_wrap"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@mipmap/password_xhd"
            android:hint="@string/re_user_hint"
            android:maxLines="1"
            android:padding="5.0dip"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textColorHint="#ffcccccc"
            android:textSize="15.0sp" />

        <EditText
            android:id="@+id/re_password"
            style="@style/style_width_match_height_wrap"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@mipmap/password_xhd"
            android:hint="@string/re_pass_hint"
            android:padding="5.0dip"
            android:password="true"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textColorHint="#ffcccccc"
            android:textSize="15.0sp" />

        <EditText
            android:id="@+id/okpassword"
            style="@style/style_width_match_height_wrap"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@mipmap/password_xhd"
            android:hint="@string/re_okpass_hint"
            android:padding="5.0dip"
            android:password="true"
            android:textColor="#ff333333"
            android:textColorHint="#ffcccccc"
            android:textSize="15.0sp" />


        <Button
            android:id="@+id/register_but"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@mipmap/re_xhd"
            android:text="@string/register_but"
            android:textColor="#ffffffff"
            android:textSize="23.0sp" />
    </LinearLayout>
</LinearLayout>